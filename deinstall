PKGNAME="$1"
STAGE="$2"

TARGETDIR=$PKG_PREFIX/crashplan
IDENTITYDIR=/var/lib/crashplan

function stop
{
  # stop running instance via SMF or kill
  echo "stop service here"
}

function deinstall
{
  # remove SMF
  # svccfg something
  # remove identity dir
  rm -r $IDENTITYDIR
  # CrashPlan stores data in the install directory pkgsrc won't know about
  rm -rf $TARGETDIR
}

case $STAGE in
VIEW-DEINSTALL)
  ;;
DEINSTALL)
  stop
  ;;
POST-DEINSTALL)
  deinstall
  ;;
esac
